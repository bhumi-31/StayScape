<% layout("/layouts/boilerplate")%>

    <style>
        .map-container {
            display: flex;
            height: calc(100vh - 80px);
            margin: -1rem -3rem;
        }

        #cluster-map {
            flex: 1;
            min-height: 600px;
        }

        .map-sidebar {
            width: 350px;
            background: var(--bg-card);
            border-left: 1px solid var(--border-color);
            overflow-y: auto;
            padding: 1.5rem;
        }

        .map-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--border-color);
        }

        .map-header h2 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-primary);
            margin: 0;
        }

        .listing-count {
            background: var(--gradient-primary);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .map-legend {
            background: var(--bg-secondary);
            border-radius: 0.75rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .legend-title {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .legend-items {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        .legend-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            background: var(--gradient-primary);
            color: white;
            text-decoration: none;
            border-radius: 0.75rem;
            font-weight: 600;
            transition: all 0.25s ease;
        }

        .back-link:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 4px 15px rgba(13, 148, 136, 0.3);
        }

        /* Mapbox Popup Styling */
        .mapboxgl-popup-content {
            padding: 0;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            min-width: 250px;
        }

        .popup-image {
            width: 100%;
            height: 120px;
            object-fit: cover;
        }

        .popup-content {
            padding: 1rem;
        }

        .popup-title {
            font-size: 1rem;
            font-weight: 600;
            color: #1F2937;
            margin-bottom: 0.25rem;
        }

        .popup-location {
            font-size: 0.85rem;
            color: #6B7280;
            margin-bottom: 0.5rem;
        }

        .popup-price {
            font-size: 1.1rem;
            font-weight: 700;
            color: #FE424D;
        }

        .popup-link {
            display: block;
            text-align: center;
            background: linear-gradient(135deg, #FE424D 0%, #FF5A5F 100%);
            color: white;
            padding: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.85rem;
            margin-top: 0.75rem;
            border-radius: 0.5rem;
        }

        .popup-link:hover {
            color: white;
        }

        @media (max-width: 992px) {
            .map-container {
                flex-direction: column;
            }

            .map-sidebar {
                width: 100%;
                border-left: none;
                border-top: 1px solid var(--border-color);
            }

            #cluster-map {
                min-height: 400px;
            }
        }
    </style>

    <div class="map-container">
        <!-- Map -->
        <div id="cluster-map"></div>

        <!-- Sidebar -->
        <div class="map-sidebar">
            <div class="map-header">
                <h2><i class="fa-solid fa-map-location-dot me-2" style="color: #FE424D;"></i>Map View</h2>
                <span class="listing-count">
                    <%= listingsCount %> listings
                </span>
            </div>

            <div class="map-legend">
                <div class="legend-title">Cluster Guide</div>
                <div class="legend-items">
                    <div class="legend-item">
                        <span class="legend-dot" style="background: #51bbd6;"></span>
                        <span>
                            < 10 listings</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-dot" style="background: #f1f075;"></span>
                        <span>10-50 listings</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-dot" style="background: #f28cb1;"></span>
                        <span>> 50 listings</span>
                    </div>
                </div>
            </div>

            <p style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1.5rem;">
                <i class="fa-solid fa-hand-pointer me-2"></i>Click on a cluster to zoom in, or click on a listing marker
                to see details.
            </p>

            <a href="/listings" class="back-link">
                <i class="fa-solid fa-arrow-left me-2"></i>Back to Listings
            </a>
        </div>
    </div>

    <!-- Mapbox CSS - Must be loaded before JavaScript -->
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' />
    <!-- Mapbox Scripts -->
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js'></script>

    <script>
        mapboxgl.accessToken = '<%= mapToken %>';

        const listings = <%- geoData %>;

        const map = new mapboxgl.Map({
            container: 'cluster-map',
            style: 'mapbox://styles/mapbox/light-v11',
            center: [78.9629, 20.5937], // Center on India
            zoom: 4
        });

        // Add navigation controls
        map.addControl(new mapboxgl.NavigationControl(), 'top-left');
        map.addControl(new mapboxgl.FullscreenControl(), 'top-left');

        map.on('load', () => {
            // Add a source for the listings
            map.addSource('listings', {
                type: 'geojson',
                data: listings,
                cluster: true,
                clusterMaxZoom: 14,
                clusterRadius: 50
            });

            // Cluster circles
            map.addLayer({
                id: 'clusters',
                type: 'circle',
                source: 'listings',
                filter: ['has', 'point_count'],
                paint: {
                    'circle-color': [
                        'step',
                        ['get', 'point_count'],
                        '#51bbd6',
                        10,
                        '#f1f075',
                        50,
                        '#f28cb1'
                    ],
                    'circle-radius': [
                        'step',
                        ['get', 'point_count'],
                        20,
                        10,
                        30,
                        50,
                        40
                    ],
                    'circle-stroke-width': 2,
                    'circle-stroke-color': '#fff'
                }
            });

            // Cluster count labels
            map.addLayer({
                id: 'cluster-count',
                type: 'symbol',
                source: 'listings',
                filter: ['has', 'point_count'],
                layout: {
                    'text-field': ['get', 'point_count_abbreviated'],
                    'text-font': ['DIN Offc Pro Medium', 'Arial Unicode MS Bold'],
                    'text-size': 12
                }
            });

            // Individual listing points
            map.addLayer({
                id: 'unclustered-point',
                type: 'circle',
                source: 'listings',
                filter: ['!', ['has', 'point_count']],
                paint: {
                    'circle-color': '#FE424D',
                    'circle-radius': 10,
                    'circle-stroke-width': 2,
                    'circle-stroke-color': '#fff'
                }
            });

            // Click on cluster to zoom
            map.on('click', 'clusters', (e) => {
                const features = map.queryRenderedFeatures(e.point, {
                    layers: ['clusters']
                });
                const clusterId = features[0].properties.cluster_id;
                map.getSource('listings').getClusterExpansionZoom(
                    clusterId,
                    (err, zoom) => {
                        if (err) return;
                        map.easeTo({
                            center: features[0].geometry.coordinates,
                            zoom: zoom
                        });
                    }
                );
            });

            // Click on individual listing to show popup
            map.on('click', 'unclustered-point', (e) => {
                const coordinates = e.features[0].geometry.coordinates.slice();
                const { id, title, location, country, price, image } = e.features[0].properties;

                const popupHTML = `
                <img src="${image}" class="popup-image" alt="${title}">
                <div class="popup-content">
                    <h3 class="popup-title">${title}</h3>
                    <p class="popup-location"><i class="fa-solid fa-location-dot me-1"></i>${location}, ${country}</p>
                    <p class="popup-price">₹${Number(price).toLocaleString('en-IN')} / night</p>
                    <a href="/listings/${id}" class="popup-link">View Details →</a>
                </div>
            `;

                new mapboxgl.Popup()
                    .setLngLat(coordinates)
                    .setHTML(popupHTML)
                    .addTo(map);
            });

            // Cursor change on hover
            map.on('mouseenter', 'clusters', () => {
                map.getCanvas().style.cursor = 'pointer';
            });
            map.on('mouseleave', 'clusters', () => {
                map.getCanvas().style.cursor = '';
            });
            map.on('mouseenter', 'unclustered-point', () => {
                map.getCanvas().style.cursor = 'pointer';
            });
            map.on('mouseleave', 'unclustered-point', () => {
                map.getCanvas().style.cursor = '';
            });
        });
    </script>