<% layout("/layouts/boilerplate")%>

    <style>
        .profile-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 2rem 0;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 2rem;
            padding: 2rem;
            background: white;
            border-radius: 1.5rem;
            border: 1px solid #E5E7EB;
            margin-bottom: 2rem;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, #FE424D 0%, #FF5A5F 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
            font-weight: 700;
            flex-shrink: 0;
        }

        .profile-info h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1F2937;
            margin-bottom: 0.5rem;
        }

        .profile-info p {
            color: #6B7280;
            margin-bottom: 0.25rem;
        }

        .profile-stats {
            display: flex;
            gap: 2rem;
            margin-top: 1rem;
        }

        .stat {
            text-align: center;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: #FE424D;
        }

        .stat-label {
            font-size: 0.875rem;
            color: #6B7280;
        }

        .profile-tabs {
            display: flex;
            gap: 0.5rem;
            border-bottom: 2px solid #E5E7EB;
            margin-bottom: 2rem;
            overflow-x: auto;
        }

        .profile-tab {
            padding: 0.75rem 1.5rem;
            color: #6B7280;
            text-decoration: none;
            font-weight: 600;
            border-bottom: 2px solid transparent;
            margin-bottom: -2px;
            cursor: pointer;
            transition: all 0.15s ease;
            white-space: nowrap;
        }

        .profile-tab:hover {
            color: #FE424D;
        }

        .profile-tab.active {
            color: #FE424D;
            border-bottom-color: #FE424D;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1F2937;
            margin-bottom: 1.5rem;
        }

        .listings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .listing-card-small {
            background: white;
            border: 1px solid #E5E7EB;
            border-radius: 1rem;
            overflow: hidden;
            transition: all 0.25s ease;
        }

        .listing-card-small:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            transform: translateY(-4px);
        }

        .listing-card-small img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .listing-card-small .card-body {
            padding: 1rem;
        }

        .listing-card-small h5 {
            font-size: 1rem;
            font-weight: 600;
            color: #1F2937;
            margin-bottom: 0.5rem;
        }

        .listing-card-small .location {
            color: #6B7280;
            font-size: 0.875rem;
        }

        .listing-card-small .price {
            font-weight: 600;
            color: #FE424D;
            margin-top: 0.5rem;
        }

        .review-card {
            background: white;
            border: 1px solid #E5E7EB;
            border-radius: 1rem;
            padding: 1.25rem;
            margin-bottom: 1rem;
        }

        .review-listing-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #E5E7EB;
        }

        .review-listing-img {
            width: 60px;
            height: 60px;
            border-radius: 0.5rem;
            object-fit: cover;
        }

        .review-text {
            color: #4B5563;
            line-height: 1.6;
        }

        .wishlist-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            background: #F9FAFB;
            border-radius: 1rem;
            color: #6B7280;
        }

        .empty-state i {
            font-size: 3rem;
            color: #D1D5DB;
            margin-bottom: 1rem;
        }

        @media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
            }

            .profile-stats {
                justify-content: center;
            }
        }
    </style>

    <div class="profile-container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-avatar">
                <%= profileUser.username.charAt(0).toUpperCase() %>
            </div>
            <div class="profile-info">
                <h1>@<%= profileUser.username %>
                </h1>
                <p><i class="fa-solid fa-envelope me-2"></i>
                    <%= profileUser.email %>
                </p>
                <div class="profile-stats">
                    <div class="stat">
                        <div class="stat-number">
                            <%= userListings.length %>
                        </div>
                        <div class="stat-label">Listings</div>
                    </div>
                    <div class="stat">
                        <div class="stat-number">
                            <%= listingsWithUserReviews.reduce((acc, l)=> acc + l.reviews.length, 0) %>
                        </div>
                        <div class="stat-label">Reviews</div>
                    </div>
                    <% if (isOwnProfile) { %>
                        <div class="stat">
                            <div class="stat-number">
                                <%= profileUser.wishlist ? profileUser.wishlist.length : 0 %>
                            </div>
                            <div class="stat-label">Wishlist</div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="profile-tabs">
            <div class="profile-tab active" data-tab="listings">
                <i class="fa-solid fa-house me-1"></i>Listings
            </div>
            <div class="profile-tab" data-tab="reviews">
                <i class="fa-solid fa-star me-1"></i>Reviews
            </div>
            <% if (isOwnProfile) { %>
                <div class="profile-tab" data-tab="wishlist">
                    <i class="fa-solid fa-heart me-1"></i>Wishlist
                </div>
                <div class="profile-tab" data-tab="bookings">
                    <i class="fa-solid fa-calendar-check me-1"></i>Bookings
                </div>
                <% } %>
        </div>

        <!-- Listings Tab -->
        <div class="tab-content active" id="listings">
            <h3 class="section-title"><i class="fa-solid fa-house me-2" style="color: #FE424D;"></i>Listings by <%=
                    profileUser.username %>
            </h3>
            <% if (userListings.length===0) { %>
                <div class="empty-state">
                    <i class="fa-solid fa-house-circle-xmark"></i>
                    <p>No listings yet</p>
                </div>
                <% } else { %>
                    <div class="listings-grid">
                        <% for (let listing of userListings) { %>
                            <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
                                <div class="listing-card-small">
                                    <img src="<%= listing.image.url %>" alt="<%= listing.title %>">
                                    <div class="card-body">
                                        <h5>
                                            <%= listing.title %>
                                        </h5>
                                        <p class="location"><i class="fa-solid fa-location-dot me-1"></i>
                                            <%= listing.location %>
                                        </p>
                                        <p class="price">&#8377;<%= listing.price.toLocaleString('en-IN') %> / night</p>
                                    </div>
                                </div>
                            </a>
                            <% } %>
                    </div>
                    <% } %>
        </div>

        <!-- Reviews Tab -->
        <div class="tab-content" id="reviews">
            <h3 class="section-title"><i class="fa-solid fa-star me-2" style="color: #F59E0B;"></i>Reviews by <%=
                    profileUser.username %>
            </h3>
            <% if (listingsWithUserReviews.length===0) { %>
                <div class="empty-state">
                    <i class="fa-solid fa-comment-slash"></i>
                    <p>No reviews yet</p>
                </div>
                <% } else { %>
                    <% for (let listing of listingsWithUserReviews) { %>
                        <% for (let review of listing.reviews) { %>
                            <div class="review-card">
                                <div class="review-listing-info">
                                    <img src="<%= listing.image.url %>" alt="<%= listing.title %>"
                                        class="review-listing-img">
                                    <div>
                                        <strong><a href="/listings/<%= listing._id %>">
                                                <%= listing.title %>
                                            </a></strong>
                                        <p class="starability-result mb-0" data-rating="<%= review.rating %>"></p>
                                    </div>
                                </div>
                                <p class="review-text">
                                    <%= review.comment %>
                                </p>
                            </div>
                            <% } %>
                                <% } %>
                                    <% } %>
        </div>

        <% if (isOwnProfile) { %>
            <!-- Wishlist Tab -->
            <div class="tab-content" id="wishlist">
                <h3 class="section-title"><i class="fa-solid fa-heart me-2" style="color: #EF4444;"></i>My Wishlist</h3>
                <% if (!profileUser.wishlist || profileUser.wishlist.length===0) { %>
                    <div class="empty-state">
                        <i class="fa-regular fa-heart"></i>
                        <p>No saved listings yet</p>
                    </div>
                    <% } else { %>
                        <div class="wishlist-grid">
                            <% for (let listing of profileUser.wishlist) { %>
                                <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
                                    <div class="listing-card-small">
                                        <img src="<%= listing.image.url %>" alt="<%= listing.title %>">
                                        <div class="card-body">
                                            <h5>
                                                <%= listing.title %>
                                            </h5>
                                            <p class="location"><i class="fa-solid fa-location-dot me-1"></i>
                                                <%= listing.location %>
                                            </p>
                                            <p class="price">&#8377;<%= listing.price.toLocaleString('en-IN') %> / night
                                            </p>
                                        </div>
                                    </div>
                                </a>
                                <% } %>
                        </div>
                        <% } %>
            </div>

            <!-- Bookings Tab -->
            <div class="tab-content" id="bookings">
                <h3 class="section-title"><i class="fa-solid fa-calendar-check me-2" style="color: #FE424D;"></i>Recent
                    Bookings</h3>
                <% if (userBookings.length===0) { %>
                    <div class="empty-state">
                        <i class="fa-solid fa-calendar-xmark"></i>
                        <p>No bookings yet</p>
                        <a href="/listings" style="color: #FE424D; margin-top: 0.5rem; display: inline-block;">Explore
                            stays →</a>
                    </div>
                    <% } else { %>
                        <% for (let booking of userBookings) { %>
                            <div class="review-card">
                                <div class="review-listing-info">
                                    <img src="<%= booking.listing.image.url %>" alt="<%= booking.listing.title %>"
                                        class="review-listing-img">
                                    <div style="flex: 1;">
                                        <strong><a href="/listings/<%= booking.listing._id %>">
                                                <%= booking.listing.title %>
                                            </a></strong>
                                        <p style="margin: 0.25rem 0; color: #6B7280; font-size: 0.875rem;">
                                            <i class="fa-solid fa-calendar me-1"></i>
                                            <%= booking.checkIn.toLocaleDateString('en-IN', { day: 'numeric' ,
                                                month: 'short' }) %> →
                                                <%= booking.checkOut.toLocaleDateString('en-IN', { day: 'numeric' ,
                                                    month: 'short' , year: 'numeric' }) %>
                                        </p>
                                    </div>
                                    <div style="text-align: right;">
                                        <div style="font-weight: 600;">&#8377;<%=
                                                booking.totalPrice.toLocaleString('en-IN') %>
                                        </div>
                                        <span
                                            style="font-size: 0.75rem; padding: 0.25rem 0.5rem; border-radius: 9999px; background: <%= booking.status === 'confirmed' ? '#D1FAE5' : booking.status === 'cancelled' ? '#FEE2E2' : '#FEF3C7' %>; color: <%= booking.status === 'confirmed' ? '#065F46' : booking.status === 'cancelled' ? '#991B1B' : '#92400E' %>;">
                                            <%= booking.status %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                                <a href="/bookings"
                                    style="display: inline-block; margin-top: 1rem; color: #FE424D;">View all bookings
                                    →</a>
                                <% } %>
            </div>
            <% } %>
    </div>

    <script>
        // Tab switching functionality
        document.querySelectorAll('.profile-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                // Remove active from all tabs and contents
                document.querySelectorAll('.profile-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

                // Add active to clicked tab and corresponding content
                tab.classList.add('active');
                const tabId = tab.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });
    </script>